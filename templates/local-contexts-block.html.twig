<div class="local-contexts-block">
  {% if form %}
  <div class="form-container">
    {{ form }}
  </div>
  {% else %}
  <p>The form is not available.</p>
  {% endif %}

  {% if tk_labels %}
    <ul class="tk-labels-list">
      {% for label in tk_labels %}
        <li>
          <a href="#" class="tk-label">

            {% if display_option == 'show_name' %}
              <div class="tk-label-name">{{ label.name|default('No Label Title')|e('html') }}</div>
            {% endif %}

            <img 
              src="{{ label.img_url|default('#')|e('html') }}" 
              alt="{{ label.name|default('Label Image')|e('html') }}" 
              title="{{ label.name|default('Label Name')|e('html') }}"
              class="tk-label-img" 
            />
            <div class="tk-label-text-container">
              {{ label.label_text|default('No Label text')|e('html') }}
            </div>
          </a>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No TK labels available.</p>
  {% endif %}
</div>
